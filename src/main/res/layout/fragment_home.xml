<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header card -->
        <LinearLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvHomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Prices Today"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track price changes across different fuel types."
                android:textSize="13sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Ambient light card -->
        <LinearLayout
            android:id="@+id/home_light_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvLightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambient light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLightLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for sensor..."
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvLightMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current mode: Day"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <!-- Manual toggle button for theme -->
            <Button
                android:id="@+id/btnToggleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOGGLE THEME"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Price cards -->
        <LinearLayout
            android:id="@+id/home_price_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Card for 95 Octane -->
            <LinearLayout
                android:id="@+id/cardPrice95"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvLabel95"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="95 Octane"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrice95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.80 €/L" />
            </LinearLayout>

            <!-- Card for Diesel -->
            <LinearLayout
                android:id="@+id/cardPriceDiesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvLabelDiesel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diesel"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPriceDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.60 €/L" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
